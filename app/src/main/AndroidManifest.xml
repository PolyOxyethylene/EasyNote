<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_easy_note"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_easy_note_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyNoteDemo"
        tools:targetApi="31">
        <activity
            android:name=".LicenseInfoActivity"
            android:exported="false"
            android:label="@string/title_activity_license_info"
            android:theme="@style/Theme.EasyNoteDemo" >
            <intent-filter>
                <action android:name="com.oxyethylene.OPENSOURCE_INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- 实验性功能设置页面 -->
        <activity
            android:name=".LabSettingActivity"
            android:exported="false"
            android:label="@string/title_activity_lab_setting"
            android:theme="@style/Theme.EasyNoteDemo">
            <intent-filter>
                <action android:name="com.oxyethylene.LAB" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 备份设置页面 -->
        <activity
            android:name=".BackupActivity"
            android:exported="false"
            android:label="@string/title_activity_backup"
            android:theme="@style/Theme.EasyNoteDemo">
            <intent-filter>
                <action android:name="com.oxyethylene.BACKUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 统计页面 -->
        <activity
            android:name=".StatisticsActivity"
            android:exported="false"
            android:label="@string/title_activity_statistics"
            android:theme="@style/Theme.EasyNoteDemo">
            <intent-filter>
                <action android:name="com.oxyethylene.STATISTICS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 编辑器设置界面 -->
        <activity
            android:name=".EditorSettingActivity"
            android:exported="false"
            android:label="@string/title_activity_editor_setting"
            android:theme="@style/Theme.EasyNoteDemo">
            <intent-filter>
                <action android:name="com.oxyethylene.EDITOR_SETTING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 事件详情页面 -->
        <activity
            android:name=".EventActivity"
            android:exported="false"
            android:label="@string/title_activity_event"
            android:theme="@style/Theme.EasyNoteDemo"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="com.oxyethylene.EVENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- "关于应用"界面 -->
        <activity
            android:name=".AppInfoActivity"
            android:exported="false"
            android:label="@string/title_activity_app_info"
            android:theme="@style/Theme.EasyNoteDemo"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="com.oxyethylene.INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 文章编辑界面 -->
        <activity
            android:name=".EditActivity"
            android:exported="false"
            android:label="@string/title_activity_edit"
            android:theme="@style/Theme.EasyNoteDemo">
            <intent-filter>
                <action android:name="com.oxyethylene.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 设置界面 -->
        <activity
            android:name=".SettingActivity"
            android:exported="false"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.EasyNoteDemo">
            <intent-filter>
                <action android:name="com.oxyethylene.SETTING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EasyNoteDemo"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>